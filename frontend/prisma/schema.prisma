// Prisma schema file
// SQLite provider for local development

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Item {
  id   Int    @id @default(autoincrement())
  name String
}

model Message {
  id        Int      @id @default(autoincrement())
  sessionId String
  role      String
  content   String
  createdAt DateTime @default(now())

  @@index([sessionId])
}
