// Prisma schema for Pacific Sands Analytics
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model RateData {
  id        String   @id @default(uuid())
  date      DateTime
  rate      Float
  roomType  String
  occupancy Float?
  source    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CompetitorData {
  id           String   @id @default(uuid())
  competitor   String
  date         DateTime
  rate         Float
  roomType     String?
  availability Int?
  source       String?
  createdAt    DateTime @default(now())
}

model CustomerFeedback {
  id         String   @id @default(uuid())
  date       DateTime
  rating     Float
  comment    String?
  category   String?
  sentiment  String?
  source     String?
  createdAt  DateTime @default(now())
}

model MarketInsights {
  id          String   @id @default(uuid())
  date        DateTime
  insight     String
  category    String
  importance  String?
  source      String?
  createdAt   DateTime @default(now())
}

model Forecast {
  id          String   @id @default(uuid())
  targetDate  DateTime
  predictedRate Float
  confidence  Float?
  factors     String?
  createdAt   DateTime @default(now())
}

model Knowledge {
  id        String   @id @default(uuid())
  type      String
  content   String
  metadata  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
